<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Fluent 2 friendly minimal tokens: colors, spacing, radii, typography -->
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <!-- Brand color tuned for light theme -->
      <Color x:Key="BrandPrimaryColor">#0063B1</Color>
      <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource BrandPrimaryColor}"/>
    </ResourceDictionary>
    <ResourceDictionary x:Key="Dark">
      <!-- Slightly lighter brand for dark backgrounds -->
      <Color x:Key="BrandPrimaryColor">#4CC2FF</Color>
      <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource BrandPrimaryColor}"/>
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

  <!-- Spacing scale -->
  <Thickness x:Key="SpacingXS">2</Thickness>
  <Thickness x:Key="SpacingS">4</Thickness>
  <Thickness x:Key="SpacingM">8</Thickness>
  <Thickness x:Key="SpacingL">16</Thickness>
  <Thickness x:Key="SpacingXL">24</Thickness>

  <!-- Numeric gaps for properties expecting double (e.g., StackPanel.Spacing) -->
  <x:Double x:Key="GapXS">2</x:Double>
  <x:Double x:Key="GapS">4</x:Double>
  <x:Double x:Key="GapM">8</x:Double>
  <x:Double x:Key="GapL">16</x:Double>
  <x:Double x:Key="GapXL">24</x:Double>

  <!-- Corner radii -->
  <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
  <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>

  <!-- Typography scale (keep default fonts; numbers only) -->
  <x:Double x:Key="TitleFontSize">20</x:Double>
  <x:Double x:Key="SubtitleFontSize">16</x:Double>
  <x:Double x:Key="BodyFontSize">14</x:Double>
</ResourceDictionary>


