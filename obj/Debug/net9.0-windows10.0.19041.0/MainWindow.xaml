<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OperationPrime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <NavigationView x:ConnectionId='2' x:Name="MainNavigationView" 
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Left">
            
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" 
                                    Icon="Home" 
                                    Tag="Dashboard"/>
                <NavigationViewItem Content="Incidents" 
                                    Icon="Important" 
                                    Tag="Incidents"/>
                <NavigationViewItem Content="Reports" 
                                    Icon="Document" 
                                    Tag="Reports"/>
                <NavigationViewItem Content="Settings" 
                                    Icon="Setting" 
                                    Tag="Settings"/>
            </NavigationView.MenuItems>
            
            <NavigationView.Content>
                <Frame x:ConnectionId='4' x:Name="ContentFrame" 
                       Margin="12,0,12,12">
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition/>
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </NavigationView.Content>
            
        </NavigationView>
        
        <!-- Status Bar -->
        <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                Height="32"
                VerticalAlignment="Bottom"
                Margin="0,0,0,0">
            <TextBlock x:ConnectionId='3' x:Name="StatusText" 
                       Text="Ready" 
                       Margin="12,6,200,6"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Border>
    </Grid>
</Window>

